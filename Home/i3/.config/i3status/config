general {
  output_format = "i3bar"
  colors = true
  interval = 5
}

order += "disk /"
order += "ethernet eth0"
order += "load"
order += "tztime local"

ethernet eth0 {
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery 0 {
  format = "%status %percentage %remaining %emptytime"
  format_down = "No battery"
  status_chr = "⚡ CHR"
  status_bat = "� BAT"
  status_unk = "? UNK"
  status_full = "☻ FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

tztime local {
  format = "%Y-%m-%d %I:%M:%S"
}

load {
  format = "%5min"
}

disk "/" {
  format = "%free"
}
